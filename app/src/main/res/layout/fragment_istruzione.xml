<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IstrFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="LA MIA ISTRUZIONE"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:paddingStart="5dp"
            android:text="Diploma Nautico"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Istituto Tecnico Nautico
            VOTO:68"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:textStyle="italic"
            android:paddingStart="10dp"/>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:textColor="@color/grey"
            android:text="Certificati e corsi"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambridge English Preliminary(PET)
            Certificazione inglese livello B1"
            android:textSize="20sp"
            android:textColor="@color/grey"
            android:textStyle="italic"
            android:paddingStart="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attestato di formazione per gli operatori del settore
alimentare         (HACCP) 2020/2023"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:textStyle="italic"
            android:paddingStart="10dp"/>
    </LinearLayout>
</FrameLayout>